#! /usr/bin/expect


#<host> <ssh user> <ssh pw> <command>

set command "[lindex $argv 3]"
spawn ssh [lindex $argv 1]@[lindex $argv 0] $command

set timeout 2
expect {
    "yes/no" {
        send "yes\n"
        exp_continue 2
    }
    "*?password:" {
        send "[lindex $argv 2]\n"

        expect "again" {
            exit 0
        }
    }
    timeout { exit 0 }
}
interact
