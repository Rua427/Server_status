#! /usr/bin/expect


#<host> <ssh user> <ssh pw>


spawn ssh [lindex $argv 1]@[lindex $argv 0] "df | grep -v Used | sort -rnsk 5 | head -1 | cut -d '%' -f1"
set timeout 2
expect {
    -nocase "yes/no" {
        send "yes\n"
        exp_continue
    }
    -nocase  "*?password:" {
        send "[lindex $argv 2]\n"
        exp_continue
    }  
    -nocase "again" {
        send "root4db\n"
    }
    timeout { exit 0 }
}
expect eof
